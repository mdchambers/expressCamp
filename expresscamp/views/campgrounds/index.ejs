<% include ../partials/header %>
<!-- <h4><%= currentUser ? currentUser.username : "Not logged in" %></h4> -->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Your handpicked campgrounds.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    <div class="row text-center">
        <% campgrounds.forEach( cg => { %>
            <div class="col-md-3 col-small-6">
                <div class="thumbnail">
                    <img src="<%= cg.image %>">
                    <div class="caption">
                        <h4><%= cg.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= cg._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>

</div>

<% include ../partials/footer %>